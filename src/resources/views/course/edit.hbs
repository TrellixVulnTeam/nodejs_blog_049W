<div class="mt-4">
    <h3>Update Course</h3>
    <form method="POST" action="/course/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input name="name" type="text" class="form-control" value = "{{course.name}}" id="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mo ta</label>
            <textarea name = "description" type="text" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoID" class="form-label">videoID</label>
            <input name = "videoID" type="text" class="form-control" value = "{{course.videoID}}" id="id">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Trinh do</label>
            <select name="level" id="level" class="form-control">
                <option selected >{{course.level}}</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>